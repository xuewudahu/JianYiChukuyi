<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:orientation="vertical"
    android:background="@color/white"

    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="请输入密码"
            android:gravity="center"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <com.kuaidihelp.posthouse.ui.SplitEditTextView
            android:id="@+id/FactRstDialogPsw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:borderColor="@color/colorPrimaryDark"
            app:borderSize="2dp"
            app:contentNumber="6"
            app:contentShowMode="text"
            app:cornerSize="3dp"
            app:corner_size="10dp"
            app:cursorColor="@color/colorPrimary"
            app:cursorWidth="2dp"
            app:inputBoxSquare="true"
            app:inputBoxStyle="singleBox"

            app:spaceSize="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_weight="2">
        <TextView
            android:id="@+id/FactRstDialogCancel"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/cancel_color"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"
            android:text="取消"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/FactRstDialogCertain"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/sure_color"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"
            android:text="确认"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
