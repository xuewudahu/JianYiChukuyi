<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/gray_background"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/dp_10">

        <LinearLayout
            android:id="@+id/ll_barcode_area"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_write"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="相机与读码"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2.0dip"
                        android:layout_marginTop="@dimen/dp_10"
                        android:alpha="0.3"
                        android:background="@color/black" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_10"
                    app:cardCornerRadius="@dimen/dp_15"
                    app:cardElevation="@dimen/dp_2">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_32"
                            android:layout_height="@dimen/dp_32"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/setting_exposure_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="自动曝光"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <Switch
                            android:id="@+id/swt_auto_exposure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:thumb="@drawable/yunpan_switch_ios_thumb"
                            android:track="@drawable/yunpan_switch_ios_track_selector" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_10"
                    app:cardCornerRadius="@dimen/dp_15"
                    app:cardElevation="@dimen/dp_2">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_32"
                            android:layout_height="@dimen/dp_32"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/bar_code" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="一维条码"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <Switch
                            android:id="@+id/swt_bar_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:thumb="@drawable/yunpan_switch_ios_thumb"
                            android:track="@drawable/yunpan_switch_ios_track_selector" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_10"
                    app:cardCornerRadius="@dimen/dp_15"
                    app:cardElevation="@dimen/dp_2">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_28"
                            android:layout_height="@dimen/dp_28"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/rq_code" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="二维条码"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <Switch
                            android:id="@+id/swt_RQ_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:thumb="@drawable/yunpan_switch_ios_thumb"
                            android:track="@drawable/yunpan_switch_ios_track_selector" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_camera_parameter"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_10"
                    app:cardCornerRadius="@dimen/dp_15"
                    app:cardElevation="@dimen/dp_2">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.0"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_5">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/dp_30"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="@dimen/dp_108"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="补光亮度:"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_18" />

                                <EditText
                                    android:id="@+id/fill_light_brightness"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:layout_marginEnd="@dimen/dp_20"
                                    android:layout_weight="2.5"
                                    android:background="@drawable/textview_frame"
                                    android:gravity="center"
                                    android:hint="   请输入1~10   "
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_22" />

                                <TextView
                                    android:id="@+id/fill_light_brightness_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.7"
                                    android:background="@drawable/bg_update_btn"
                                    android:gravity="center"
                                    android:text="保存"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_16" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_10"
                    app:cardCornerRadius="@dimen/dp_15"
                    app:cardElevation="@dimen/dp_2">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.0"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_5">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/dp_30"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="@dimen/dp_108"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="ISO："
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_18" />

                                <EditText
                                    android:id="@+id/iso_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:layout_marginEnd="20dp"
                                    android:layout_weight="2.5"
                                    android:background="@drawable/textview_frame"
                                    android:gravity="center"
                                    android:hint="请输入100~400"
                                    android:inputType="numberDecimal"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_22" />

                                <TextView
                                    android:id="@+id/iso_number_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.7"
                                    android:background="@drawable/bg_update_btn"
                                    android:gravity="center"
                                    android:text="保存"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_16" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_10"
                    app:cardCornerRadius="@dimen/dp_15"
                    app:cardElevation="@dimen/dp_2">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.0"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_5">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/dp_30"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="@dimen/dp_108"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="图片解码："
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_18" />

                                <TextView
                                    android:id="@+id/file_path_select"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:layout_marginEnd="20dp"
                                    android:layout_weight="2.5"
                                    android:autoLink="all"
                                    android:background="@drawable/textview_frame"
                                    android:clickable="true"
                                    android:gravity="center"
                                    android:text="/sdcard/sample.yuv" />

                                <TextView
                                    android:id="@+id/file_path_select_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.6"
                                    android:background="@drawable/bg_update_btn"
                                    android:gravity="center"
                                    android:text="保存"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_16" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_10"
                    app:cardCornerRadius="@dimen/dp_15"
                    app:cardElevation="@dimen/dp_2">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.0"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_5">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/dp_30"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="@dimen/dp_108"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="多条码："
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_18" />

                                <EditText
                                    android:id="@+id/mulit_bar_code"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:layout_marginEnd="20dp"
                                    android:layout_weight="2.5"
                                    android:background="@drawable/textview_frame"
                                    android:gravity="center"
                                    android:hint="    请输入1~5    "
                                    android:inputType="numberDecimal"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_22" />

                                <TextView
                                    android:id="@+id/mulit_bar_code_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.7"
                                    android:background="@drawable/bg_update_btn"
                                    android:gravity="center"
                                    android:text="保存"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_16" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_10"
                    app:cardCornerRadius="@dimen/dp_15"
                    app:cardElevation="@dimen/dp_2">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.0"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_5">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/dp_30"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="@dimen/dp_108"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="采图模式："
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_18" />

                                <Spinner
                                    android:id="@+id/save_pic_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:entries="@array/camera_save_type"></Spinner>

                                <Spinner
                                    android:id="@+id/save_pic_format"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:entries="@array/camera_save_format"></Spinner>

                                <EditText
                                    android:id="@+id/save_pic_edit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="3"
                                    android:background="@drawable/textview_frame"
                                    android:gravity="center"
                                    android:hint="请输入数量"
                                    android:inputType="numberDecimal"
                                    android:paddingLeft="@dimen/dp_10"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_22" />

                                <TextView
                                    android:id="@+id/save_pic_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:background="@drawable/bg_update_btn"
                                    android:gravity="center"
                                    android:text="保存"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_16" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/btn_back"
                    android:layout_width="@dimen/dp_168"
                    android:layout_height="@dimen/dp_36"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/bg_update_cancle_btn"
                    android:gravity="center"
                    android:text="返回"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>