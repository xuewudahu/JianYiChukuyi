<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/gray_background"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape_gray"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10">
            <TextView
                android:textSize="@dimen/sp_20"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_5"
                android:text="网络测试" />
            <View
                android:background="@color/gray"
                android:layout_width="fill_parent"
                android:layout_height="2.0dip"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:alpha="0.3" />
            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_10"
                app:cardCornerRadius="@dimen/dp_15"
                app:cardElevation="@dimen/dp_2">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/sp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:src="@mipmap/baidu_iocn" />
                    <TextView
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:id="@+id/et_ip_address"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/sp_10"
                        android:text="百度官网" />
                </LinearLayout>
                <TextView
                    android:textSize="@dimen/sp_22"
                    android:gravity="center_vertical"
                    android:layout_gravity="right"
                    android:id="@+id/tv_spent_time"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="0ms" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_26"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/bt_server"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"

                    android:backgroundTint="#ff1296db"
                    android:layout_marginEnd="@dimen/dp_26"
                    android:text="服务测试"
                    android:layout_weight="1.0" />
                <Button
                    android:id="@+id/bt_oos"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:backgroundTint="#ff1296db"
                    android:layout_marginEnd="@dimen/dp_26"
                    android:text="OOS测试"
                    android:layout_weight="1.0" />
            </LinearLayout>
            <TextView
                android:textSize="@dimen/sp_24"
                android:textColor="#FFF00056"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/sp_15"
                android:text="测试结果" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20">
                    <TextView
                        android:textSize="@dimen/sp_20"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="@dimen/sp_15"
                        android:text="网络质量：" />
                    <TextView
                        android:textSize="@dimen/sp_24"
                        android:textColor="@color/teal_200"
                        android:id="@+id/tv_net_quality"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="优" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="right"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="@dimen/dp_30">
                    <TextView
                        android:textSize="@dimen/sp_20"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="@dimen/sp_15"
                        android:text="超时次数：" />
                    <TextView
                        android:textSize="@dimen/sp_24"
                        android:textColor="@color/foreground_highlight"
                        android:id="@+id/tv_overtime_count"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="@dimen/sp_15"
                        android:text="0" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_result_fine"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_176"
            android:layout_marginLeft="@dimen/dp_76"
            android:layout_marginTop="@dimen/dp_48"
            android:layout_marginRight="@dimen/dp_76"
            android:layout_marginBottom="@dimen/dp_48"
            android:src="@mipmap/net_fine" />
        <ImageView
            android:id="@+id/iv_result_bad"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_176"
            android:layout_marginLeft="@dimen/dp_76"
            android:layout_marginRight="@dimen/dp_76"
            android:src="@mipmap/net_bad" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/dp_10">
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dp_26"
                android:text="网络建议：" />
            <TextView
                android:textSize="@dimen/sp_16"
                android:textColor="@color/foreground_highlight"
                android:id="@+id/tv_Tips"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="当前网络状态良好，符合驿站一体机操作需求" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@mipmap/wireframe"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/dp_10">
            <TextView
                android:textSize="@dimen/sp_20"
                android:layout_gravity="center"
                android:id="@+id/tv_net_on"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无结果" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/scroll_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </ScrollView>
        </LinearLayout>
        <TextView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/dp_168"
            android:layout_height="@dimen/dp_36"
            android:gravity="center"
            android:background="@drawable/bg_update_cancle_btn"
            android:layout_marginLeft="@dimen/dp_210"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
</LinearLayout>