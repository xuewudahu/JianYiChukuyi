<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/barcode_label"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:text="Barcode:"/>
    <EditText android:id="@+id/barcode"
        android:layout_height="50dp"
        android:layout_width="200dp"
        app:layout_constraintTop_toTopOf="@id/barcode_label"
        app:layout_constraintBottom_toBottomOf="@id/barcode_label"
        app:layout_constraintLeft_toRightOf="@id/barcode_label"
        android:text="18605896467"
        />
    <Button
        android:id="@+id/outlib"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="出库"
        app:layout_constraintTop_toBottomOf="@id/barcode_label"
        app:layout_constraintLeft_toLeftOf="@id/barcode_label"/>
    <Button
        android:id="@+id/queryLib"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:text="查询"
        app:layout_constraintTop_toBottomOf="@id/barcode_label"
        app:layout_constraintLeft_toRightOf="@+id/outlib"/>
    <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/outlib"
        app:layout_constraintLeft_toLeftOf="@id/outlib"/>
</androidx.constraintlayout.widget.ConstraintLayout>